<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ricerca.SearchResult"
    android:orientation="vertical">

    <TextView
        android:text="Risultati ricerca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:text="Filtri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/baseline_expand_more_36"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:id="@+id/filter_visibility">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/search_button"
            android:background="@drawable/baseline_search_24"/>



    <Spinner
        android:layout_width="210dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:id="@+id/spinner_search"
        android:entries="@array/regione"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/search_data_partenza"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:text="Data partenza"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:id="@+id/search_data_ritorno"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:text="Data ritorno"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Spinner
        android:layout_width="210dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:id="@+id/spinner_mezzo"
        android:entries="@array/mezzo"
        android:spinnerMode="dialog"/>

</LinearLayout>

