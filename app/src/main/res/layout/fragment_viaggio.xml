<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ricerca.SearchViaggioFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/azzurro">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/nomeV_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="0dp"
        android:textSize="20sp"
        android:text="Tour" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hide"
            android:background="@drawable/baseline_expand_less_24" />
    </LinearLayout>

    <!--
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_gravity="center"
        android:id="@+id/image_viaggio"
        android:visibility="visible"/>
    -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_viaggio"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        card_view:cardCornerRadius="70dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center|bottom"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/image_viaggio"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mezzo_result"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Mezzo"
        android:layout_margin="5dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_marginTop="330dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!--
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa1"/>
            -->
            <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            card_view:cardCornerRadius="70dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/ic_launcher_round"
                android:id="@+id/image_tappa1"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nome1_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Tour"/>

            <!--
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa2"/>
-->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                card_view:cardCornerRadius="70dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center|bottom"
                    android:src="@mipmap/ic_launcher_round"
                    android:id="@+id/image_tappa2"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nome2_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="10dp"
                android:text="Tour"/>

            <!--
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa3"/>
            -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                card_view:cardCornerRadius="70dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center|bottom"
                    android:src="@mipmap/ic_launcher_round"
                    android:id="@+id/image_tappa3"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/nome3_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="10dp"
                android:text="Tour"/>
            <!--
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa4"/>
            -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                card_view:cardCornerRadius="70dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center|bottom"
                    android:src="@mipmap/ic_launcher_round"
                    android:id="@+id/image_tappa4"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/nome4_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginBottom="0dp"
                android:text="Tour"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>