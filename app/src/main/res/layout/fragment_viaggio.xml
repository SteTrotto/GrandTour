    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mezzo_result"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Mezzo"
        android:textStyle = "normal"
        android:textColor = "@color/black"
        android:layout_margin="5dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/azzurro"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_marginTop="330dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa1"/>

            <TextView
                android:id="@+id/nome1_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle = "normal"
                android:textColor = "@color/black"
                android:text="Tour"/>


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa2"/>

            <TextView
                android:id="@+id/nome2_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="10dp"
                android:textStyle = "normal"
                android:textColor = "@color/black"
                android:text="Tour"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa3"/>

            <TextView
                android:id="@+id/nome3_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="10dp"
                android:textStyle = "normal"
                android:textColor = "@color/black"
                android:text="Tour"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_gravity="center"
                android:id="@+id/image_tappa4"/>

            <TextView
                android:id="@+id/nome4_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginBottom="0dp"
                android:textStyle = "normal"
                android:textColor = "@color/black"
                android:text="Tour"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>